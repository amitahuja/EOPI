#include<bits/stdc++.h>
using namespace std;
struct Node{
    int v;
    Node *next;
};

class List{
    Node * head;
    public:
       List(){
           head = nullptr;
       }

     
    void addVal(int val){
        Node *n = new Node;
        
        n->v = val;
        //cout << n->v << " ";
        if(!head){
            head = n;
            return;
        }
        
        n->next = head;
        head = n;
    }
    
    void reverseList(void){
        
        Node *curr, *prev, *next;
        prev = nullptr;
        curr = head;
        while(curr){
            next = curr->next;
            curr->next = prev;
            prev = curr;
            curr = next;
        }
        head = prev;
        
    }
    
    void printList(void){
        Node *n = head;
        //cout << n << " " << n->next <<  "\n";
        while(n){
            cout << n->v << " ";
            n = n->next;
        }
        cout << "\n";
    }
};

int main(){
    List ls, ls2;
    ls.addVal(1);
    ls.addVal(2);
    ls.addVal(3);
    ls.addVal(4);
    ls.addVal(5);
    ls2.addVal(5);
    ls2.addVal(6);
    ls2.addVal(7);
    ls2.addVal(8);
    ls2.addVal(9);
    ls2.addVal(10);
    ls.printList();
    ls.reverseList();
    ls2.reverseList();
    ls.printList();
    ls2.printList();
    
}
